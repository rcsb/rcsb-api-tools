{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "declarationDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM","ES2020"],
    "rootDir": "src",
    "strict": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "lib"]
}