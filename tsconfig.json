{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./build",
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "lib": [ "dom", "es2017" ],
    "declaration": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strictFunctionTypes": true,
    "declarationDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [ "src/*", "src/**/*", "src/**/**/*", "src/**/**/**/*" ],
  "exclude": [
    "node_modules"
  ]
}
