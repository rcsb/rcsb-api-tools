{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "dom", "es2020" ],
    "rootDir": "src",
    "outDir": "./lib/commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [ "src" ],
  "exclude": [
    "node_modules"
  ]
}
